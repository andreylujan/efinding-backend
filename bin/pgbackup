#!/bin/bash

IP=efinding.moller.cl
#Â IP=52.201.182.66
PORT=22
KEY=id_rsa
echo 'Backing up to file...'
echo "ssh -p $PORT -i $HOME/.ssh/$KEY "plluch@$IP" 'pg_dump -d efinding_production > ~/dump.sql'"
ssh -p $PORT -i $HOME/.ssh/$KEY "plluch@$IP" 'pg_dump -d efinding_production > ~/dump.sql'
echo 'Done. Downloading to current folder...'
scp -P $PORT  -i $HOME/.ssh/$KEY "plluch@$IP:~/dump.sql" db/dump.sql
echo 'Done. Deleting remote file...'
ssh -p $PORT  -i $HOME/.ssh/$KEY "plluch@$IP" 'rm ~/dump.sql'
echo 'Done.'
